{% extends "base.html.twig" %}


{% block title %}
	{{ product.title }}
{% endblock %}

{% block body %}
	<div class="product-page container text-white">
		<div class="row mt-3 mb-4">
			<div class="col-md-4">
				<img src="/uploads/{{product.image}}" alt="{{ product.title }}" class="img-fluid">
			</div>
			<div class="col-md-8">
				<h1 class="mt-4 mt-md-0">{{ product.title }}</h1>
				<h2>{{ product.price }}
					â‚¬</h2>
				<hr>
				<b>Description:
				</b>
				{{form_start(form)}}
				{% if is_granted('IS_AUTHENTICATED') %}{% endif %}

				{{form_row(form.quantity)}}
				{{form_widget(form.add,
				{
					'attr' :{ 
						'class':(is_granted('IS_AUTHENTICATED')?'':'disabled') 
					},
					'row_attr' :{ 
						'class': "btn-to-cart" 
					}
				})}}

				{{form_end(form)}}
			</div>
		</div>
		<a href="{{path('front_product_like_unlike')}} " id='product-like'
		data-entity-id = "{{ product.id }}"
		data-csrf-token ="{{ csrf_token('product' ~ product.id) }}"
		data-liked="{{ isBlogAlreadyLiked == true ? '1' : '0' }}"
		>&nbsp;
		<i class="far fa-thumbs-up {{isBlogAlreadyLiked == true ? 'liked' : '' }}">
		{{ isBlogAlreadyLiked == true ? 'Unlike' : 'Like' }}
		</i>
		
		
		
		</a>
	</div>
{% endblock %}
