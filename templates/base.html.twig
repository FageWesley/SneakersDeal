<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			<script src="https://code.jquery.com/jquery-3.6.3.min.js" integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU=" crossorigin="anonymous"></script>
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body class="">


		{% block navbar %}


			<div class="Navbar d-flex">

				<a href="/" class="logo-title">
					<img src="{{ asset('build/images/Logo.png') }}" alt="Logo">SneakersDeal
				</a>
				
				<form action="{{path('app_research')}}" method="post" class="searchbar nav-item offset-1 col-5">
				
									<input type="search" name="search" id="search" placeholder="search" class="w-100">
									
									<button for="submit" id="submit">
										<i class="fa-solid fa-magnifying-glass text-white"></i>
									</button>
					
								</form>
				{# <a class="offset-1 col-1 fs-3 text-white text-decoration-none d-flex align-self-center justify-content-center" href="/drops"><i class="fa-solid fa-calendar"></i></a>#}
				<div class="nav-icons">
					<a class="nav-item" href="/wishlist">
						<i class="nav-link fa-solid fa-heart"></i>
					</a>
					<a class="nav-item" href="/cart">
						<i class="fa-solid fa-cart-shopping"></i>
					</a>
					{% if is_granted('IS_AUTHENTICATED') %}
						<a class="nav-item" href="/logout">
							<i class="fa-solid fa-arrow-right-from-bracket fs-5"></i>
						</a>
					{% else %}
						<a class="nav-item" href="/login">
							<i class="fa-solid fa-arrow-right-to-bracket"></i>
						</a>
					{% endif %}
				</div>

			</div>
		{% endblock %}

		{% block body %}{% endblock %}
	</body>
</html>
