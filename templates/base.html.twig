			{% if is_granted('IS_AUTHENTICATED') %}
				<a class="col-1 text-white text-decoration-none d-flex align-items-center justify-content-evenly" href="/logout"><i class="fa-solid fa-arrow-right-from-bracket fs-3"></i>Logout</a>
